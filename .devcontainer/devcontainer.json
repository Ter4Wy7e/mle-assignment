{
    "name": "Python Development Environment",

    "build": {
        "context": "..",
        "dockerfile": "../Dockerfile"
    },

    "workspaceFolder": "/app",

    "mounts": [
        {
            "source": "${localWorkspaceFolder}",
            "target": "/app",
            "type": "bind"
        }
    ],

    "customizations": {
        "vscode":{
            "extensions": [
                "codeium.codeium",
                "esbenp.prettier-vscode",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter",
                "ms-azuretools.vscode-docker"
            ]
        }
    }
}